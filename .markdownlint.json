{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/v0.37.4/schema/markdownlint-config-schema.json",
  "default": true,
  "line-length": false,
  "no-duplicate-heading": false,
  "no-inline-html": {
    "allowed_elements": [
      "br",
      "img"
    ]
  },
  "emphasis-style": {
    "style": "asterisk"
  }
}
